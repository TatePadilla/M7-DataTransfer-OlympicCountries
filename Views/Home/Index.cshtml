@model CountryViewModel
@{
    ViewData["Title"] = "Olympic Countries";
}
<div class="row">
    <div class="col-md-3">
        <!--Creating selection group for game types (summer, winter, etc.).-->
        <h3 class="mt-3">Game</h3>
        
        <!--Creating the "all" option for category, which sets category to "all", but checks for the active game.-->
        <form asp-action="Index" method="get">
            <div class="list-group">
                <input type="hidden" asp-for="ActiveCategory" />
                <a asp-action="Index" asp-route-activeGame="all" asp-route-activeCategory="@Model.ActiveCategory" class="list-group-item @Model.CheckActiveGame("all")"> All</a>
                @foreach (Game game in Model.Games)
                {
                    <a asp-action="Index" asp-route-activeGame="@game.GameID" asp-route-activeCategory="@Model.ActiveCategory" class="list-group-item @Model.CheckActiveGame(game.GameID)">
                        @game.Name
                    </a>
                }
            </div>
        <!--Creating selection group for category types (outdoor/indoor).-->
            <h3 class="mt-3">Category</h3>
            <div class="list-group">
                <input type="hidden" asp-for="ActiveGame" />
                <a asp-action="Index" asp-route-activeGame="@Model.ActiveGame" asp-route-activeCategory="all" class="list-group-item @Model.CheckActiveCategory("all")"> All</a>
                @foreach (Category category in Model.Categories)
                {
                    <a asp-action="Index" asp-route-activeGame="@Model.ActiveGame" asp-route-activeCategory="@category.CategoryID" class="list-group-item @Model.CheckActiveCategory(category.CategoryID)"> @category.Name</a>
                }
            </div>
        </form>
    </div>

    <!--Creating column for countries and their flags, along with tip tool with country information (name, game, category).-->
    <div class="col-md-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-inline-item">
                    <a asp-action="Details" asp-route-id="@country.CountryID">
                        <img src="~/images/@country.Flag" alt="@country.Name" title="@country.Name | @country.Game.Name | @country.Category.Name" />
                    </a>
                </li>
            }
        </ul>
    </div>
</div>